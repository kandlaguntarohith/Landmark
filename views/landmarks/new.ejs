<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New landmark</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/landmarks"
      method="POST"
      class="form-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="landmark[title]"
          id="title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="landmark[location]"
          id="location"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="formFileMultiple" class="form-label">Upload Images</label>
        <input
          type="file"
          class="form-control"
          id="formFileMultiple"
          name="image"
          multiple
          required
        />
        <div class="invalid-feedback">
          This landmark would look much better with a picture.
        </div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-6">
          <label class="form-label" for="price">landmark Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">â‚¹</span>
            <input
              type="text"
              class="form-control"
              placeholder="0.00"
              aria-label="price-label"
              aria-describedby="price-label"
              id="price"
              name="landmark[price]"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>
        <div class="mb-3 col-md-6">
          <label class="form-label" for="category">Category</label>
          <div class="input-group">
            <select
              class="form-select"
              aria-label="Default select example"
              id="category"
              name="landmark[category]"
              required
            >
              <% for(let cat of categories) {%>
              <option value="<%=cat%>">
                <%=cat.toUpperCase()[0]%><%=cat.substring(1)%>
              </option>
              <% } %>
            </select>
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="landmark[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>
